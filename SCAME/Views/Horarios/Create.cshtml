@model SCAME.Models.Horario
@using SCAME.Models
@{
    ViewData["Title"] = "Create";
    var primero = ViewBag.primerizo;
}

<div class="container">
  <div class="abs-center">
      <h4>
@{if (primero == true)
    {
    <h2>Ingrese su horario principal, despues podrá agregar mas desde su perfil</h2>
    <div class="form-row col-md-12">
            <form asp-action="Create1">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Dia" class="control-label"></label>
                    <input asp-for="Dia" class="form-control" />
                    <span asp-validation-for="Dia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoraApertura" class="control-label"></label>
                    <input asp-for="HoraApertura" class="form-control" />
                    <span asp-validation-for="HoraApertura" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="HoraCierre" class="control-label"></label>
                    <input asp-for="HoraCierre" class="form-control" />
                    <span asp-validation-for="HoraCierre" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <input type="submit" value="Finalizar" class="btn btn-primary" />
                </div>
            </form>
        </div>
   
    }
    else
    {
    <h2>Ingrese nuevo horario</h2>
    <div class="form-row col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Dia" class="control-label"></label>
                    <input asp-for="Dia" class="form-control" />
                    <span asp-validation-for="Dia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoraApertura" class="control-label"></label>
                    <input asp-for="HoraApertura" class="form-control" />
                    <span asp-validation-for="HoraApertura" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoraCierre" class="control-label"></label>
                    <input asp-for="HoraCierre" class="form-control" />
                    <span asp-validation-for="HoraCierre" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
                <div class="form-group col-md-6">
    <a asp-action="Index" class="btn btn-primary">Regresar</a>
</div>
            </form>
        </div>
    }
}
</h4>
  </div>
</div>
