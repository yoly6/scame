@model SCAME.Models.Paciente

@{
    ViewData["Title"] = "Details";
}
<br/>
<br/>
<section id="hero" class="d-flex align-items-center">
    <div class="container">
      <h1>Detalle Paciente</h1>
      <h2>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimerNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimerNombre) @Html.DisplayFor(model => model.SegundoNombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimerApellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimerApellido) @Html.DisplayFor(model => model.SegundoApellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PruebaCovid)
        </dt>
        <dd class="col-sm-10">
            <a class="icon-sli-docs" href="@("/PdfPac/" + Model.PruebaCovid)"> Prueba</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CasoConfirmado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CasoConfirmado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discapacidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discapacidad.NombreDiscapacidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroCarnet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroCarnet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Porcentaje)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Porcentaje)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Canton)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canton.NombreCanton)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sexo.NombreSexo)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.IdPaciente" class="btn-get-started scrollto">Editar</a> 
    <a asp-action="Index" class="btn-get-started scrollto">Regresar</a>
</div>
</h2>
 </div>
  </section>
