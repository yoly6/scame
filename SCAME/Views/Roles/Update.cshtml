@using SCAME.Controllers;
@model EdicionRol

    <div class="col-md-12">
        <br /><br />
        <h1 class="h1 text-center text-strong">Actualizar Rol</h1>

        <br />
        <div asp-validation-summary="All" class="text-danger"></div>

        <form asp-action="Update" method="post">
            <input type="hidden" name="RolName" value="@Model.Rol.Name" />
            <input type="hidden" name="RolId" value="@Model.Rol.Id" />

            <h2>Añadir a @Model.Rol.Name</h2>
            <table class="table table-responsive-sm table-hover">
                <thead class="thead-dark">
                    <tr>
                        <td>Usuario</td>
                        <td>Seleccionar</td>
                    </tr>
                </thead>  
                <tbody>
                    @foreach (var usuario in Model.NoMiembros)
                    {
                        <tr>
                            <td>@usuario.UserName</td>
                            <td><input type="checkbox" name="AumentarIds" value="@usuario.Id" /></td>
                        </tr>
                    }
                </tbody>
            </table>

            <h2>Quitar a @Model.Rol.Name</h2>
            <table class="table table-responsive-sm table-hover">
                <thead class="thead-dark">
                    <tr>
                        <td>Usuario</td>
                        <td>Seleccionar</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Miembros)
                    {
                        <tr>
                            <td>@usuario.UserName</td>
                            <td><input type="checkbox" name="QuitarIds" value="@usuario.Id" /></td>
                        </tr>
                    }
                </tbody>
            </table>
            
            <div class="form-row ">
                <div class="form-group col-md-2 mb-3">
                    <input type="submit" class="btn btn-primary" value="Guardar" />
                </div>
                <div class="form-group col-md-7 mb-3"> </div>
                <div class="form-group col-md-2 mb-3">
                    <a class="nav-link" asp-action="Index">Regresar</a>
                </div>
            </div>
            <br /><br />
        </form>

    </div>