<h1 class="h1 text-center text-strong">Crear un Rol</h1>
<hr />

<form asp-action="Create" method="post">
    <div class="form-row">
        <div class="col-md-4 mb-3"></div>
        <div class="col-md-4 mb-3">

            <label for="nombre" class="control-label text-l-size-16">Ingrese aquí el nombre del rol:</label>
            <input type="text" name="nombre" class="form-control" />

        </div>
    </div>
    <div class="form-row ">
        <div class="col-md-4 mb-3"></div>
        <div class="form-group col-md-2 mb-3">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
        <div class="form-group col-md-2 mb-3">
            <a class="btn btn-secondary text-white" asp-action="Index">Regresar</a>
        </div>
    </div>
</form>
