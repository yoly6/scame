@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

   
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bienvenido @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link ">Cerrar Sesión</button>
                </form>
            </li>
        }
        else
        {

            <li class="nav-item">
                <a  asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
            </li>
            <li class="nav-item">
                <a  asp-area="Identity" asp-page="/Account/Login">Ingresar</a>
            </li>
        }
    
