@model SCAME.Models.HorasAtencion

@{
    ViewData["Title"] = "Edit";
}


<br>
<div class="container">
  <div class="abs-center">
<h2>Editar Horas de Atencion</h2>
<hr />
<h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHorasAtencion" />
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraCierre" class="control-label"></label>
                <input asp-for="HoraCierre" class="form-control" />
                <span asp-validation-for="HoraCierre" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="TurnoId" class="control-label"></label>
                <select asp-for="TurnoId" class ="form-control" asp-items="ViewBag.HorasId"></select>
                <span asp-validation-for="TurnoId" class="text-danger"></span>
               
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
    <a asp-action="Index"  class="btn btn-primary">Regresar</a>
</div>
        </form>
    </div>
</div>
</h4>
  </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
