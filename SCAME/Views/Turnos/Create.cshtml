@model SCAME.Models.Turno

@{
    ViewData["Title"] = "Create";
}

<br>
<div class="container">
  <div class="abs-center">
       <h2>Crear Turno</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>
            <div class="form-row col-md-12">
            <div class="form-group col-md-6">
                <label asp-for="NombreTurno" class="control-label"></label>
                <input asp-for="NombreTurno" class="form-control" />
                <span asp-validation-for="NombreTurno" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DiasTurno" class="control-label"></label>
                <input asp-for="DiasTurno" class="form-control" />
                <span asp-validation-for="DiasTurno" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="HoraSalida" class="control-label"></label>
                <input asp-for="HoraSalida" class="form-control" />
                <span asp-validation-for="HoraSalida" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group col-md-6">
          <a asp-action="Index" class="btn btn-primary">Regresar</a>
         </div>
         </h4>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
